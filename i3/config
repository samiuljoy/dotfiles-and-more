# two modifier keys are set, one is super which is the default mod key and the other one is alt key
set $mod Mod4
set $alt Mod1
#
# Increase or decrease volume with F9 and F8 and toggle mute with F10
bindsym F9 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && notify-send -t 800 "Volume = $(amixer get Master | sed -n '6 p' | awk '{ print $5 }' | sed 's/\[//g' | sed 's/\]//g')"
bindsym F8 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && notify-send -t 800 "Volume = $(amixer get Master | sed -n '6 p' | awk '{ print $5 }' | sed 's/\[//g' | sed 's/\]//g')"
bindsym F10 exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
